---
platform: template
switches:
  iptv:
    friendly_name: "IPTV"
    value_template: "{{ is_state_attr('remote.logitech_harmony', 'current_activity', 'IPTV') }}"
    turn_on:
      service: remote.turn_on
      data:
        entity_id: remote.logitech_harmony
        activity: "IPTV"
    turn_off:
      service: remote.turn_on
      data:
        entity_id: remote.logitech_harmony
        activity: "PowerOff"
