- alias: "Switch - Kitchen On Off"
  trigger:
    - platform: state
      entity_id: switch.newkaku_014ad3ba_a

  action:
    service: light.turn_on
    entity_id: light.kitchen_all
    data_template:
      brightness_pct: >-
        {% if (states.switch.newkaku_014ad3ba_a.state) == 'on' %} 100
        {% else %} 0
        {% endif %}
      kelvin: 4700
