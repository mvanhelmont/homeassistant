- alias: Switch - Dressoir On
  trigger:
    - platform: state
      entity_id: switch.newkaku_011fdd46_c
      to: 'on'

  action:
    service: light.turn_on
    entity_id: light.dressoir_all
    data_template:
      brightness_pct: >
        {% if (states.binary_sensor.node_10.state) == 'on' and (states.input_boolean.switch_kay_leren.state) == 'on' %} 100
        {% elif (states.binary_sensor.node_10.state) == 'off' and (states.input_boolean.switch_kay_leren.state) == 'on' %} 100
        {% else %} 20
        {% endif %}


- alias: Switch - Dressoir Off
  trigger:
    - platform: state
      entity_id: switch.newkaku_011fdd46_c
      to: 'off'

  action:
    service: light.turn_off
    entity_id: light.dressoir_all
